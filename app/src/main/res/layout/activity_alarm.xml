<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androiddevclass.thirstbuster.AlarmActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/glassofwater2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Alarm On"
            android:id="@+id/alarmOnButton"
            android:layout_gravity="center_horizontal"
            android:background="#ff0000"
            android:layout_marginTop="125dp"
            android:textSize="30sp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="16dp"
            android:onClick="alarmOn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Alarm Off"
            android:id="@+id/alarmOffButton"
            android:layout_gravity="center_horizontal"
            android:background="#ff0000"
            android:padding="10dp"
            android:textSize="30sp"
            android:layout_marginTop="100dp"
            android:onClick="alarmOff" />
    </LinearLayout>
</RelativeLayout>
