<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androiddevclass.thirstbuster" >

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeightEntryActivity"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".PregnantActivity"
            android:parentActivityName=".WeightEntryActivity" >
        </activity>
        <activity
            android:name=".ActivityLevelActivity"
            android:parentActivityName=".WeightEntryActivity" >
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:parentActivityName=".ActivityLevelActivity" >
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:parentActivityName=".MainActivity" >
        </activity>

        <receiver android:name=".AlertReceiver" >
        </receiver>

        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
    </application>

</manifest>
